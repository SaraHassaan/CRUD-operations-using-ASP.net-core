@model IEnumerable<Student>

<div><a asp-controller="Student" asp-action="AddStudent" class="btn btn-primary btn-lg">Add New Student</a></div>


<form method="get" asp-action="Details">
    <div  style="float:right">

        <input type="search" asp-controller="Student"  asp-action="Details" name="Id" placeholder="Student's Id">
        <button type="submit">Search</button>
    </div>

</form>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">BirthDate</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Student s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.Name</td>
                    <td>@s.BirthDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a asp-controller="Student" asp-action="ModifyStudent" asp-route-id="@s.Id" class="btn btn-primary ">Edit</a>
                        <a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@s.Id" class="btn btn-danger">Delete</a>
                    </td>
                    
                </tr>
            }
        }
    </tbody>
</table>