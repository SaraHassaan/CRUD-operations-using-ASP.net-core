@model Student
<form method="post">
    <div class="form-group">
        <label for="Name1">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="Name1" placeholder="Enter your name">
        <span asp-validation-for="Name"  asp-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Grade1" asp-for="Grade" >Grade</label>
        <input type="number" class="form-control" asp-for="Grade" id="Grade1" placeholder="Enter your grade">
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Date Of Birth</label>
        <input type="date" asp-for="BirthDate" asp-format="{0:dd/MM/yyyy}" class="form-control">
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <button type="submit" asp-action="AddStudent" class="btn btn-primary">Submit</button>
</form>